  <div class="container">
    <div class="container">
      <%= simple_form_for @tweet, url: tweets_path, method: :post do |f| %>
      <%= f.input :text, label: 'Write a tweet!' %>
      <div class="d-flex">
        <%= f.button :submit, 'Tweet it!', class: 'btn btn-primary ml-auto'%>
      </div>
      <% end %>
    </div>
    <hr />
    <div class="container d-flex">
      <div class="users-container col-3">
        <h1>Users</h1>
        <ul>
          <% @users.each do |user| %>
            <li> <%= link_to user.full_name.capitalize, user_path(user.id) %></li>
          <% end %>
        </ul>
      </div>
      <div class="tweet-body col-6">
        <div class="
        <% if @tweets.count != 0 %>
          hide-me
        <% end %>
        " >
          <h1 class="no-tweets">You have no tweets at the moment.</h1>
        </div>
        <% @tweets.order('created_at DESC').each do |tweet| %>
        <div class="tweet-box col-12">
          <div class="tweet-header row justify-content-left">
            <%= image_tag('default_profile', class: "profile-pic") %>
            <p class="username">
              <%= link_to tweet.user.full_name.capitalize, url: user_path(tweet), method: :get %>
            </p>
            <p><%= tweet.created_at.localtime.strftime("%l:%M%P %d/%m/%y") %></p>
            <%= link_to image_tag("edit", :title => '', :border => 0, :alt => '', :class => 'edit-icon'), edit_tweet_path(tweet), method: :get %>
            <%= link_to image_tag("delete-button", :title => '', :border => 0, :alt => '', :class => 'close-icon'), tweet_path(tweet), method: :delete, class: 'ml-auto' %>
          </div>
          <div class="tweet-content d-flex justify-content-center">
            <h2 class="align-self-center"><%= tweet.text %></h2>
          </div>
        </div>
        <% end %>
      </div>

    </div>

  </div>
