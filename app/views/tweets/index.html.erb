  <div class="container">
    <div class="container" id="tweet_form">
      <%= render partial: 'tweet_form' %>
    </div>
    <hr />
    <div class="container d-flex">
      <div class="users-container col-3">
        <h1>Users</h1>
        <ul>
          <% @users.each do |user| %>
            <li> <%= link_to user.full_name.capitalize, user_path(user.id) %></li>
          <% end %>
        </ul>
      </div>
      <div class="tweet-body col-6" id="tweet_body">
        <%= render partial: 'tweet_body' %>
      </div>
    </div>

  </div>
